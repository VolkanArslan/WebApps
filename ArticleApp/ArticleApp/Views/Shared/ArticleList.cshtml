@model IEnumerable<ArticleApp.Models.ArticleModel>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        <h3>No Registry!</h3>
    </div>
}
else
{
    foreach (var article in Model)
    {
        <div class="article">
            <h3 class="page-header">
                @article.Header
            </h3>
            <p>
                <span class="glyphicon glyphicon-time"></span>
                @article.DateOfAdding
            </p>
            <hr />
            <img class="img-responsive" src="https://placehold.it/900x300" alt="" />
            <hr />
            <p>
                @article.Description
            </p>
            @Html.ActionLink("More...", "Details", "Articles", new { id = @article.Id }, new { @class = "btn btn-primary" })
        </div>
    }
}
